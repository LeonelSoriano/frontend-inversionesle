
<div class="row">
    <div class="col-12 col-xl-8">

      <div class=" principalContainer">
        <div class="container-down">
          <div class="card card-body shadow-sm mb-4">
              <h2 class="h5 mb-4">Información General</h2>
              <form>
                  <div class="row">
                      <div class="col-md-6 mb-3">
                          <div>
                              <label for="names">Nombres</label>
                              <Input class="form-control" @id="names" @type="text" placeholder="Agrega tus nombres" @value={{this.model.name}} required/>
                          </div>
                      </div>
                      <div class="col-md-6 mb-3">
                          <div>
                              <label for="sur_name">Apellidos</label>
                              <Input @value={{this.model.surname}} class="form-control" @id="sur_name" type="text" placeholder="Agrega tus apellidos" required=true/>
                          </div>
                      </div>
                  </div>
                  <div class="row align-items-center">
                      <div class="col-md-6 mb-3">
                          <label for="birthday">Fecha de nacimiento</label>
                          <div class="input-group">
                              <span class="input-group-text"><span class="far fa-calendar-alt"></span></span>
                              <Input @value={{this.birthday}} data-datepicker=""  class="form-control" id="birthday" type="text" placeholder="dd/mm/yyyy" required/>
                           </div>
                      </div>
                      <div class="col-md-6 mb-3">
                          <label for="gender">Sexo</label>
                          <select class="form-select mb-0" id="gender" aria-label="Gender select example" {{on "change" this.onChangeGender}}>
                              <option selected value="0">Sexo</option>
                              <option value="1">Mujer</option>
                              <option value="2">Hombre</option>
                          </select>
                      </div>
                  </div>
                  <div class="row">
                      <div class="col-md-6 mb-3">
                          <div class="form-group">
                              <label for="email">Email</label>
                              <Input @value={{this.model.email}} class="form-control" @id="email" @type="email" disabled=true/>
                          </div>
                      </div>
                      <div class="col-md-6 mb-3">
                          <div class="form-group">
                              <label for="phone">Telefono</label>
                              <Input @value={{this.model.phone}} class="form-control" id="phone" type="number" placeholder="+12-345 678 910" required/>
                          </div>
                      </div>
                  </div>
                  <h2 class="h5 my-4">Location</h2>
                  <div class="row">
                      <div class="col-sm-9 mb-3">
                          <div class="form-group">
                              <label for="address">Dirección</label>
                              <Input @value={{this.model.address}} class="form-control" id="address" type="text" placeholder="Enter your home address" required/>
                          </div>
                      </div>
                      <div class="col-sm-3 mb-3">
                          <div class="form-group">
                              <label for="number">Number</label>
                              <Input @value={{this.model.addressNumber}} class="form-control" id="number" type="number" placeholder="No." required />
                          </div>
                      </div>
                  </div>
                  <div class="row">
                      <div class="col-sm-4 mb-3">
                          <div class="form-group">
                              <label for="city">City</label>
                              <Input @value={{this.model.city}} class="form-control" id="city" type="text" placeholder="City" required/>
                          </div>
                      </div>
                      <div class="col-sm-4">
                          <div class="form-group">
                              <label for="zip">ZIP</label>
                              <Input @value={{this.model.zip}}  class="form-control" id="zip" type="tel" placeholder="ZIP" required/>
                          </div>
                      </div>
                  </div>
                  <div class="mt-3">
                      <button type="submit"  {{on "click" this.updateUser}} class="btn btn-dark">Save All</button>
                  </div>
              </form>
            </div>
        </div><!-- end container-down -->
        <div class="container-upper">
        </div>
      </div><!-- end -- principalContainer -->
    </div>
    <div class="col-12 col-xl-4">
        <div class="row">
            <div class="col-12 mb-4">
                <div class="card shadow-sm text-center p-0">
                    <div class="profile-cover rounded-top" data-background="../assets/img/profile-cover.jpg"></div>
                    <div class="card-body pb-5">
                        <img src="{{this.userImagen}}" class="user-avatar large-avatar rounded-circle mx-auto mt-n7 mb-4" alt="User Imagen">
                        <h6>
                          <div class="file-field">
                            <div class="d-flex justify-content-xl-center ms-xl-3">
                               <div class="d-flex">
                                 <span class="icon icon-sm">
                                   <span class="fas fa-paperclip me-4"></span>
                                 </span>
                                <input type="file" {{on "change" this.uploadImg}}  accept=".png"/>
                                  <div class="d-md-block text-left">
                                     <div class="fw-normal text-center text-dark">Choose Image</div>
                                     <div class="text-gray small">PNG. Max size of 800K</div>
                                  </div>
                               </div>
                            </div>
                         </div>
                        </h6>
                    </div>
                 </div>
            </div>
        </div>
    </div>
</div>
{{yield}}
