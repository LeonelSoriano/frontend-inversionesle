{{page-title "SignIn"}}
    <main>
        <!-- Section -->
        <section class="d-flex align-items-center my-5 mt-lg-6 mb-lg-5">
            <div class="container">
                <p class="text-center"><a href="../dashboard/dashboard.html" class="text-gray-700"><i class="fas fa-angle-left me-2"></i> Back to homepage</a></p>
                <div class="row justify-content-center form-bg-image" data-background-lg="./assets/img/illustrations/signin.svg">
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <div class="bg-white shadow-soft border rounded border-light p-4 p-lg-5 w-100 fmxw-500">
                            <div class="text-center text-md-center mb-4 mt-md-0">
                                <h1 class="mb-0 h3">Login</h1>
                            </div>

                            <form action="#"  class="mt-4  validate-login " novalidate>
                                <!-- Form -->
                                <div class="form-group mb-4">
                                    <label for="email">Tu Email</label>
                                    <div class="input-group">
                                        <span class="input-group-text" id="basic-addon1"><span class="fas fa-envelope"></span></span>
                                        <Input @type="email" class="form-control" placeholder="example@company.com" id="email"  @value={{this.email}} autofocus required/>
                                        <div class="valid-feedback">
                                            Esta ok
                                        </div>
                                        <div class="invalid-feedback">
                                            Este campo es requerido y debe ser un correo valido
                                        </div>
                                    </div>
                                </div>

                                <!-- End of Form -->
                                <div class="form-group">
                                    <!-- Form -->
                                    <div class="form-group mb-4">
                                        <label for="password">Tu  Password</label>
                                        <div class="input-group">
                                            <span class="input-group-text" id="basic-addon2"><span class="fas fa-unlock-alt"></span></span>
                                            <Input @type="password" class="form-control" placeholder="Password" id="password"  @value={{this.password}} required/>
                                            <div class="invalid-feedback">
                                                Este campo es requerido
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End of Form -->
                                    <div class="d-flex justify-content-between align-items-top mb-4">
                                        <div class="form-check">
                                            <Input class="form-check-input" @type="checkbox" value="" @id="remember" @checked={{this.remember}}/>
                                            <label class="form-check-label mb-0" for="remember">
                                              Remember me
                                            </label>
                                        </div>
                                        <LinkTo @route='sign-up' class="small text-right">Perdiste tu password?</LinkTo>
                                    </div>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-dark" {{on "click" this.login}}>Sign in</button>
                                </div>
                            </form>
                            <!-- <div class="mt-3 mb-4 text-center">
                                <span class="fw-normal">or login with</span>
                            </div> -->
